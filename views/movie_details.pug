extends layout

block content
  .movie-card
    h1= movie.name
    p Description: #{movie.description}
    p Year: #{movie.year}
    p Genres: #{movie.genres.join(', ')}
    p Rating: #{movie.rating}/10
    
    if userId && userId == movie.createdBy.toString()
      .actions
        a.btn(href="/movies/edit/" + movie._id) Edit Movie
        form(action="/movies/delete/" + movie._id method="POST" style="display: inline;")
          button(type="submit" onclick="return confirm('Are you sure you want to delete this movie?')") Delete Movie